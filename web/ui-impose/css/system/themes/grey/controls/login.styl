.is-login-background
  width 100%
  height 100%
  background-color #7b8daa
  z-index 100
.is-login-form
  position fixed
  top 50%
  left 50%
  margin-left -214px
  margin-top -242px
  z-index 101
  width 25.875em
  .login-l
    background: #ffffff
    width 22.875em
    border-radius 0.3125em
    border-bottom-left-radius 0.4375em
    border-bottom-right-radius 0.4375em
    box-shadow 0 0.3125em 2em #5c6d89
    position relative
    margin 0 auto
    margin-top 15.45%
    text-align center
    width 100%
  .login-l:before
    content 'genetix CRM'
    color #ffffff
    font-size 2.5em
    position absolute
    width 100%
    height 1em
    left 0
    top -2em
  .is-controls-panel
    padding 2.625em 2.625em 0 2.625em
    .input-e
      border 1px solid #d1d2d7
      -webkit-box-sizing border-box
      -moz-box-sizing border-box
      box-sizing border-box
      width 100%
      display block
      border-radius 0.125em
      color #2f3337
      padding 0.41665em 0.91665em
      background-color #fff
      font-size 1em
  .login-enter-btn
    cursor: pointer
    text-align: center
    border-bottom-left-radius: 0.3125em
    border-bottom-right-radius: 0.3125em
    height: 4.125em
    width: 100%
    padding-top: 1em
    position: relative
    background-color: #33c164
    -webkit-box-sizing: border-box
    -moz-box-sizing: border-box
    box-sizing: border-box
    color #ffffff
    .text-be
      font-size: 1.5em;
      font-weight: 600;
      color: #fff;
      display: inline-block;
      padding-right: 0.625em;
      position: relative;
      z-index: 1;
      &:after
        content ''
        position absolute
        right -0.9166666666666667em
        top 0.20833333333333331em
        width 0.9583333333333333em
        height 0.9583333333333333em
        background transparent url("../../../../../images/system/themes/grey/controls/go.svg") no-repeat center center
        background-size 100%
        border-radius 50%


.input-e.is-login
  margin-bottom 1.5em
.input-e.is-name
  background transparent url("../../../../../images/system/themes/grey/controls/user.svg") no-repeat 96% center
  background-size 16px

.input-e.is-password
  background: transparent url("../../../../../images/system/themes/grey/controls/lock.svg") no-repeat 94.75% center;
  background-size: 16px;
.is-login-form
  .login-l.has-errors
    .input-e
      border-color red
