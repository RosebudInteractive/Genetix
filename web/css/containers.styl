.container
  border solid 1px #000000
.container .c-content
  width 100%
  height 100%
  min-height 100%
  min-width 100%
  position relative

.h-container.container .c-content,
.v-container.container .c-content
  display flex
  display -webkit-flex
  display -moz-flex
.v-container.container .c-content
  flex-direction column
  -webkit-flex-direction column
  -moz-flex-direction column
.h-container.container .c-content
  flex-direction row
  -webkit-flex-direction row
  -moz-flex-direction row