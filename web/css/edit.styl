.control.edit
.control.label
.control.button
  position relative
  font-size 0.75em
  line-height 1.5em
  position absolute
.control.edit input
.control.button input
  color #3c4251
  border 1px solid #d7e2f5
  border-radius 4px
  padding 0.3em 0.9em 0.3em 0.9em
  &:focus
    border 1px solid #5195e5
    box-shadow inset 0 1px 2px 0px #5195e5
    outline none
.control.button input
  background-color #ffffff

.control.label
  font-family OpenSansBold
  color #718ab2
  display inline-block