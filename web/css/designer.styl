.designer
  svg
    width 100%
    height 100%
    rect.border
      stroke red
      fill transparent
    rect.invisible
      fill transparent
  g.cursor
    > rect.border
      stroke-width 3px
  .designer-toolbar
    height 2.25em
    position absolute
    width 100%
    background-color #f0f0f0
    z-index 1
    .button
      display inline-block
      height 2em
      width 2em
      background-repeat no-repeat
      margin-top 2px
      margin-left 2px
      float left
      &:hover
        background-color #1c94c4
    .button.active
      background-color #1c94c4
    .button.icon-vertical
      background-image url("/images/split-vertical-32.png")
    .button.icon-horizontal
      background-image url("/images/split-horizontal-32.png")
    .button.icon-layer
      background-image url("/images/layers-32.png")
    .button.icon-control
      background-image url("/images/add-control-32.png")
    .button.icon-delete
      background-image url("/images/delete.png")
    .button.icon-layout
      background-image url("/images/form-32-2.png")
    .control
      display inline-block
      height 2em
      width auto
      margin-top 2px
      margin-left 2px
      float left
      select, input
        margin-top 6px
  .designer-content
    padding 0
    width 100%
    height 100%
    min-height 100%
  .gen-form
    padding 0
    width 100%
    height 100%
    min-height 100%
    .v-container
      .c-content
        padding 0
.container.designer  > .c-content
  padding 2.25em 0 0 0
  overflow hidden
  .prop-edit
    width 20em
    min-width 20em
    background-color #dddddd
    .prop-edit-header
      height 2em
    .prop-edit-body
      flex 100 0 auto
      table, th, td
        border 1px solid #c8c8c8
      table
        width 100%
        height 100%
        font-size 0.8125em
        border-collapse collapse
        thead
          th
            font-weight 500
            text-align left
            padding-left 0.5em
        tbody
          td
            padding-left 0.5em
          .name
            font-weight 500
          .value
            font-weight 400
  .layer-header
    fill #ff0000
    stroke #990000
  .layer-header.active
    fill #990000
  .layer-header-text
    fill #ffffff
    text-anchor start
    font-size 11px
    font-weight bold
    cursor default
  .layer-header-text.black
    fill #4d4d4d
