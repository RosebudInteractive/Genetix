.designer
  svg
    width 100%
    height 100%
    rect.border
      stroke red
      fill transparent
    rect.invisible
      fill transparent
  g.cursor
    > rect.border
      stroke-width 3px
  .designer-toolbar.controls
    top 2.25em
  .designer-toolbar
    height 2.25em
    position absolute
    width 100%
    background-color #f0f0f0
    z-index 1
    .button
      display inline-block
      height 2em
      width 2em
      background-repeat no-repeat
      margin-top 2px
      margin-left 2px
      float left
      &:hover
        background-color #1b6a92
    .button.active
      background-color #1c94c4
    .button.disabled
      opacity 0.5
      &:hover
        background-color transparent
    .button.icon-vertical
      background-image url("/images/split-vertical-32.png")
    .button.icon-horizontal
      background-image url("/images/split-horizontal-32.png")
    .button.icon-layer
      background-image url("/images/layers-32.png")
    .button.icon-control
      background-image url("/images/add-control-32.png")
    .button.icon-delete
      background-image url("/images/delete.png")
    .button.icon-layout
      background-image url("/images/form-32-2.png")
    .button.icon-add-layout
      background-image url("/images/form-add-32.png")
    .button.icon-grid
      background-image url("/images/grid-32.png")
    .button.icon-toolbar
      background-image url("/images/toolbar-32.png")
    .button.icon-form
      background-image url("/images/form-32.png")
    .button.icon-tree
      background-image url("/images/tree-32.png")
    .button.icon-refresh
      background-image url("/images/refresh-32.png")
    .button.icon-model
      background-image url("/images/model-32.png")
    .button.icon-transform
      background-image url("/images/transform-32.png")
    .control
      display inline-block
      height 2em
      width auto
      margin-top 2px
      margin-left 2px
      float left
      select, input
        margin-top 6px
      input
        width 4em
    .panel
      display inline-block
      height 2em
      width auto
      margin-left 2px
      float left
    .panel.label
      font-size 0.75em
      text-align center
      vertical-align middle
      margin-left 0.5em
      margin-right 0.25em
      margin-top 0.75em
  .designer-content
    padding 0
    width 100%
    flex 70 0 1px
    min-height 0
    overflow-y scroll
    overflow-x auto
    .designer-scroll
      height auto
      background-color #ddd
  .model-content
    padding 0
    width 100%
    flex 30 0 1px
    min-height 0
    background-color #ddd
  .gen-form
    padding 0
    width 100%
    height 100%
    min-height 100%
    .v-container
      .c-content
        padding 0
.container.designer  > .c-content
  padding 0
  overflow hidden
  .v-container > .c-content.designer-content-wrp
    padding 0
  > .control.h-container
    padding 4.5em 0 0 0
  .prop-edit
    width 100%
    min-height 10em
    height 10em
    background-color #dddddd
    overflow: auto
    .prop-edit-header
      height 2em
    .prop-edit-body
      flex 100 0 auto
      table, th, td
        border 1px solid #c8c8c8
      table
        width 100%
        height 100%
        font-size 0.8125em
        border-collapse collapse
        thead
          th
            font-weight 500
            text-align left
            padding-left 0.5em
        tbody
          td
            padding-left 0.5em
          .name
            font-weight 500
          .value
            font-weight 400
  .layer-header
    fill #ff0000
    stroke #990000
  .layer-header.active
    fill #990000
  .layer-header-text
    fill #ffffff
    text-anchor start
    font-size 11px
    font-weight bold
    cursor default
  .layer-header-text.black
    fill #4d4d4d
