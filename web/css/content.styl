@import "./devices"

.is-left-content
  box-sizing border-box
  -moz-box-sizing border-box
  -webkit-box-sizing border-box
  height 100%
  width 100%
  /*padding-right 7.125em*/
  -webkit-transition: padding-right 0.5s ease
  -moz-transition: padding-right 0.5s ease
  -ms-transition: padding-right 0.5s ease
  -o-transition: padding-right 0.5s ease
  transition: padding-right 0.5s ease
  flex 1 1 auto

.is-content.is-device-bar-hidden div.is-left-content
  padding-right 0
