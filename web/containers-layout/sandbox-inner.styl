body
  padding 0
  margin 0
.f-row
  position relative
  box-sizing border-box
.f-row > div
  float left
input
textarea
  width 100%
  box-sizing border-box
.control.label
.control.edit
  word-wrap break-word
  padding-left 0.5em
  padding-bottom 0.5em
body > .f-row
  top 0
  left 0
  margin auto
  z-index 5
